<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.christ_javafx.LoginController"
            style="-fx-background-color: #FFDBDB;">

    <children>
        <Pane layoutY="-9.0" prefHeight="375.0" prefWidth="274.0">
            <children>
                <Label layoutX="112.0" layoutY="50.0" text="LOGIN">
                    <font>
                        <Font name="System Bold" size="17.0" />
                    </font>
                </Label>
                <Label layoutX="40.0" layoutY="91.0" text="USERNAME" />
                <TextField fx:id="usernameField" layoutX="40.0" layoutY="109.0" prefHeight="26.0" prefWidth="196.0" />
                <Label layoutX="39.0" layoutY="148.0" text="PASSWORD" />
                <PasswordField fx:id="passwordField" layoutX="40.0" layoutY="166.0" prefHeight="26.0" prefWidth="196.0" />
                <Button layoutX="25.0" layoutY="246.0" maxWidth="226.0"
                        onAction="#handleLogin"
                        prefHeight="26.0" prefWidth="226.0"
                        style="-fx-background-color: #3A59D1; -fx-text-fill: white;"
                        text="Login" />

                <!-- Register Hyperlink -->
                <Hyperlink layoutX="69.0" layoutY="289.0"
                           onAction="#goToRegister"
                           style="-fx-text-fill: #393232;"
                           text="Belum mempunyai akun" />

                <!-- Daftar Button (optional) -->
                <Button layoutX="81.0" layoutY="323.0" mnemonicParsing="false"
                        prefHeight="26.0" prefWidth="115.0"
                        style="-fx-background-color: #3A59D1; -fx-text-fill: #FFFDF6;"
                        text="Daftar sekarang" />

                <!-- Lupa Password Label (tidak interaktif) -->
                <Label layoutX="162.0" layoutY="210.0" text="Lupa Password" />
            </children>
        </Pane>
    </children>
</AnchorPane>